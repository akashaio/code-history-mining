<idea-plugin version="2">
    <id>CodeHistoryMining</id>
    <name>Code History Mining</name>
    <version>0.1 beta</version>
    <vendor email="dmitry.kandalov [at] gmail.com" url="https://github.com/dkandalov/code-history-mining">Dmitry Kandalov</vendor>

    <description><![CDATA[
        This plugin does two things:
        <ul>
            <li>grabs project history from version control and saving it as csv file</li>
            <li>reads history from csv and visualizes it with d3.js (needs a browser with SVG support)</li>
        </ul>
        For more details please see readme at https://github.com/dkandalov/code-history-mining
        <br/><br/>
        Visualization examples can be found here http://dkandalov.github.io/code-history-mining/junit.html
    ]]></description>

    <!-- http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges -->
    <idea-version since-build="122.600" />

    <!-- http://confluence.jetbrains.net/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products -->
    <!-- TODO uncomment after first release -->
    <!--<depends>com.intellij.modules.lang</depends>-->

    <application-components>
        <component>
            <implementation-class>codehistorymining.AppComponent</implementation-class>
        </component>
    </application-components>

    <!-- this is to pull github plugin dependencies for GitPluginWorkaround class -->
    <depends optional="true">org.jetbrains.plugins.github</depends>

</idea-plugin>